@inject IAddressesDataAccess addressesDataAccess;


<NumberInput TValue="int" Label="Група" @bind-Value="@group" @bind-Value:after="UpdateDbData" />



@code {
    [Parameter] public int addressId { get; set; }

    [Parameter] public int group { get; set; }
 
    private async Task UpdateDbData()
    {
        await addressesDataAccess.SetBlackoutGroup(addressId, group);
    }
}
