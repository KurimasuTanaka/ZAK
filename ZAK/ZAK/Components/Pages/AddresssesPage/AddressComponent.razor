
@using BlazorApp.DA;
@using BlazorApp.Enums;
@using BlazorBootstrap;

@inject IDaoBase<Address, AddressModel> addressesDataAccess;




<td><span> @address.streetName @address.building</span></td>
<td>
    <NumberInput TValue="double" Label="Приоритетность дома" @bind-Value="@address.priority"  @bind-Value:event="UpdateParameterValue" />
</td>


@code {
    [Parameter] public Address address { get; set; }

    private async void UpdateParameterValue()
    {
        await addressesDataAccess.Update(address, address.Id);
    }

}