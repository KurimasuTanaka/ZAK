<div>
    <table>
        <tr>
            <td>
                <AddressCoordinatesClearButtonComponent addressId="@context.Id" informationUpdated="informationUpdated" />
            </td>
            <td>
                <CoordinatesInputComponent addressId="context.Id" coordinate="@context.coordinates!.lat" Lat="@true" />
            </td>
            <td>
                <CoordinatesInputComponent addressId="context.Id" coordinate="@context.coordinates!.lat" Lon="@true" />
            </td>
        </tr>
    </table>
</div>
@code {
    [Parameter] public Address context { get; set; } = default!;
    [Parameter] public EventCallback informationUpdated { get; set; }
}
