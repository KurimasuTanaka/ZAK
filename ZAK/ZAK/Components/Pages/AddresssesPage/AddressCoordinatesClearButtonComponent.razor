@inject IDao<Address, AddressModel> _addressesDataAccess;

<Button @onclick="DeleteCoordinates">
    <Icon Name="IconName.X" />
</Button>
@code {
    [Parameter] public int addressId { get; set; }

    private async void DeleteCoordinates()
    {
        Address address = (await _addressesDataAccess.GetAll(query => query.Include(x =>  x.coordinates).Where(x => x.Id == addressId))).FirstOrDefault()!;

        if(address.coordinates is null)
        {
            address.coordinates = new AddressCoordinates();
        }
        else 
        {
            address.coordinates.lat = 0;
            address.coordinates.lon = 0;
        }

        await _addressesDataAccess.Update(
            address, 
            addressId, 
            findPredicate: a => a.Id == addressId,
            includeQuery: a => a.Include(x => x.coordinates)
            );    }

}
