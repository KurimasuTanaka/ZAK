@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase
    <NavMenu />
    <main class="p-3">

        <AuthorizeView>
            <Authorized>
                @Body
            </Authorized>
            <NotAuthorized>
                <ZAK.Components.Pages.Auth.LoginPage />
            </NotAuthorized>
        </AuthorizeView>

    </main>

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
