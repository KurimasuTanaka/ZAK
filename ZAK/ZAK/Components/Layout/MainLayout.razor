@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor
@inherits LayoutComponentBase

<style>
    .mud-main-content 
    {
        padding: 0 !important;
    }
</style>


<NavMenu />

<MudLayout>
    <main class="p-3">
        <MudMainContent>
            <AuthorizeView>
                <Authorized>
                    @Body
                </Authorized>
                <NotAuthorized>
                    <ZAK.Components.Pages.Auth.LoginPage />
                </NotAuthorized>
            </AuthorizeView>
        </MudMainContent>
    </main>
</MudLayout>
<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@* Required *@
<MudThemeProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />